      "name": "01 - Show all colleges",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"query\":\"Show all colleges\"}"
        },
        "url": { "raw": "{{baseUrl}}/nlp-query", "host": ["{{baseUrl}}"], "path": ["nlp-query"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('response ok or handled', function () {",
              "  const j = pm.response.json();",
              "  pm.expect(j).to.be.an('object');",
              "  pm.expect(j).to.have.property('sql');",
              "});",
              "console.log('normalized:', pm.response.json().normalized_query);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
